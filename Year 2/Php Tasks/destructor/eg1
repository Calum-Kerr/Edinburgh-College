<?php
class Car {
  public $name;
  public $colour;

  function __construct($name, $colour) {
    $this->name = $name;
    $this->colour = $colour;
  }
  function __destruct() {
    echo "The car is a {$this->name} and the colour is {$this->colour}.";
  }
}

$audi = new Car("Audi", "red");
?>